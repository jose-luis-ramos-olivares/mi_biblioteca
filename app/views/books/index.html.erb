<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-md-3 offset-md-2">
<%= search_form_for @q do |f| %>
<div class="form-group">
<%= f.label :state_eq, "State" %>
<%= f.select :state_eq, options_for_select(Book.states ,
@q.state_eq), {},{class: "form-control"} %>
</div>
<%= f.submit "Search", class: "btn btn-primary" %>
<% end %>
</div>
</div> 

<h1>Books</h1>

<table>
  <thead>
    <tr>
    <th><%= sort_link(@q, :title)%></th>
    <th><%= sort_link(@q, :author)%></th>
    <th><%= sort_link(@q, :state)%></th>
    <th><%= sort_link(@q, :loan_date)%></th>
    <th><%= sort_link(@q, :return_date)%></th>
    <th colspan="3"></th>
    </tr>
    </thead> 
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>State</th>
      <th>Loan date</th>
      <th>Return date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.state %></td>
        <td><%= book.loan_date %></td>
        <td><%= book.return_date %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
